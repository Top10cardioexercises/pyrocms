{
    "config": {
        "source": {
            "format": "md"
        },
        "key_name": "handle"
    },
    "routes": [
        {
            "uri": "{path}",
            "parse": true,
            "defer": true
        }
    ],
    "fields": [
        {
            "handle": "title",
            "type": "string",
            "translatable": true,
            "required": true
        },
        {
            "handle": "path",
            "string": "path",
            "required": true,
            "placeholder": "/path/to/page"
        },
        {
            "handle": "status",
            "type": "select",
            "config": {
                "options": ["enabled", "disabled"],
                "default_value": "enabled"
            }
        },
        {
            "handle": "content",
            "type": "string",
            "input": {
                "type": "array",
                "config": {
                    "types": []
                }
            }
        },
        {
            "handle": "body",
            "type": "string",
            "input": {
                "type": "editor",
                "config": {
                    "mode": "html"
                }
            }
        }
    ],
    "ui": {
        "components": [
            {
                "component": "table",
                "handle": "default",
                "columns": [{ "handle": "title" }, { "handle": "handle" }],
                "buttons": [
                    {
                        "handle": "edit",
                        "attributes": {
                            "href": "/cp/pages/{entry.handle}/edit"
                        }
                    },
                    {
                        "handle": "view",
                        "attributes": {
                            "href": "{entry.path}",
                            "target": "_blank"
                        }
                    }
                ]
            },
            {
                "component": "form",
                "handle": "default",
                "buttons": [
                    {
                        "handle": "view",
                        "attributes": {
                            "href": "{entry.path}",
                            "target": "_blank"
                        }
                    }
                ]
            }
        ],
        "admin": {
            "navigation": [
                {
                    "title": "Pages",
                    "icon": "pages",
                    "url": "/cp/pages"
                }
            ]
        }
    }
}
